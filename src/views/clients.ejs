<!DOCTYPE html>
<html lang="pt-BR">
  <!-- include head -->
    <%- include('include/head', { title: 'Clients'}) %>
  <!-- /include head -->
<body>
  <!-- include header -->
    <%- include('include/header') %>
  <!-- /include header -->

  <main id="site-main">
    <div class="container">
      <div class="box-nav d-flex justify-between">
        <a href="/add-user" class="border-shadow">
          <span class="text-gradient">Novo Cliente <i class="fas fa-user"></i></span>
        </a>
      </div>

      <!-- modal -->
      <div class="modal-overlay active">
        <div class="modal">
          <div class="newclient">
            <h2>Novo cliente</h2>
          </div>
        </div>
      </div>
      <!-- /modal -->

      <!-- form handling -->
      <form action="/api/clients" method="POST">
        <table class="table">
          <thead class="thead-dark">
            <tr>
              <th>ID</th>
              <th>Empresa</th>
              <th>Email</th>
              <th>Cnpj</th>
              <th>Telefone</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>
            <!-- show clients -->
            <% for(var i=0; i < clients.length; i++) {%>
              <tr>
                <td style="border-bottom-width:0px"><%= clients[i].id %></td>
                <td style="border-bottom-width:0px"><%= clients[i].empresa %></td>
                <td style="border-bottom-width:0px"><%= clients[i].email %></td>
                <td style="border-bottom-width:0px"><%= clients[i].cnpj %></td>
                <td style="border-bottom-width:0px"><%= clients[i].telephone %></td>
                <td style="display: flex;border: 0px ">
                  <a href="/clients/update-client?id=<%= clients[i].id %>">
                    <span><img src="https://img.icons8.com/ios/452/edit--v1.png" style="max-width:40px; margin-right: 5px;"></span>
                  </a>
                  <a href="/clients/delete-client?id=<%= clients[i].id %>">
                    <span><img src="https://image.flaticon.com/icons/png/512/54/54195.png" style="max-width:40px;"></span>
                  </a>
                </td>
              </tr>
            <% } %>
            <!-- /show clients -->
          </tbody>
        </table>
      </form>
      <!-- /form handling -->
    </div>
  </main>
</body>
</html>